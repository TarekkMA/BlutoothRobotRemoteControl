<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.tmaproject.tarekkma.blutoothrobotremotecontrol.ui.UtilsFragment"
    >


  <GridLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:columnCount="2"
      >

    <ImageView
        android:id="@+id/stop"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/sign_96"
        android:padding="16dp"
        />

    <ImageView
        android:id="@+id/buzz"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/whistle_104"
        android:padding="16dp"
        />
    <ImageView
        android:id="@+id/incDis"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:padding="16dp"
        />

    <ImageView
        android:id="@+id/decDis"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_remove_circle_black_24dp"
        android:padding="16dp"
        />

    <ImageView
        android:id="@+id/auto"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_flash_auto_black_24dp"
        android:padding="16dp"
        />

    <ImageView
        android:id="@+id/man"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_flash_on_black_24dp"
        android:padding="16dp"
        />





  </GridLayout>


</LinearLayout>
