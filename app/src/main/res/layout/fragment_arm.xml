<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tmaproject.tarekkma.blutoothrobotremotecontrol.ui.arm.ArmFragment"
    android:gravity="center"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/up1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/up2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/down1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/relese"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_swap_horiz_black_24dp"
        tools:src="@drawable/ic_swap_horiz_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/down2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <android.support.v7.widget.AppCompatImageView
        android:visibility="invisible"
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/grap"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_compare_arrows_black_24dp"
        tools:src="@drawable/ic_compare_arrows_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:visibility="invisible"
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        />

  </LinearLayout>

</LinearLayout>
