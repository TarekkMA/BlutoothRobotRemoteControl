<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmaproject.tarekkma.blutoothrobotremotecontrol.ui.movement.MovementFragment"
    android:gravity="center"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Mo7 Sin Temp Control"
      android:gravity="center"
      android:textSize="18sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/up"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/down"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        tools:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        />

  </LinearLayout>

</LinearLayout>
